---
export interface Props {
	title: string;
	href: string;
	disabled?: boolean;
}

const { href,title,disabled = false } = Astro.props;
const fileName = href.split('/').reverse()[0]
---

<li class="flex flex-col items-center">
	<span class="fill-white ">
		<slot />
	</span>
	<a href={href} download={fileName}><button disabled={disabled} class="mt-8 text-white focus:ring-4 font-medium rounded-lg text-sm px-5 py-2.5  bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-emerald-800 disabled:bg-emerald-900 disabled:cursor-not-allowed">{title}</button></a>
</li>