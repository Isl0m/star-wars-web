---
export interface Props {
	title: string;
	href: string;
}

const { href,title } = Astro.props;
const fileName = href.split('/').reverse()[0]
---

<li class="flex flex-col items-center">
	<span class="fill-white ">
		<slot />
	</span>
	<a href={href} download={fileName}><button class="mt-8 text-white bg-emerald-700 hover:bg-emerald-800 focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5  dark:bg-emerald-600 dark:hover:bg-emerald-700 focus:outline-none dark:focus:ring-emerald-800">{title}</button></a>
</li>